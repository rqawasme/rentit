<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <LinearLayout
        android:id="@+id/booking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textSize="35dp"
            android:paddingHorizontal="5dp">
        </TextView>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/booking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="listingName"
            android:textSize="35dp"
            android:paddingHorizontal="5dp">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/booking_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/booking_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:textColor="@color/white"
            android:id="@+id/booking_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$price"
            android:textSize="30dp"
            android:paddingHorizontal="5dp">
        </TextView>

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="per day"
            android:textSize="30dp"
            android:paddingHorizontal="5dp">

        </TextView>
    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From:"
        android:textSize="25dp"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/booking_lower"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startDate"
        android:textSize="25dp"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setDate"
        app:layout_constraintTop_toBottomOf="@id/booking_start_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startTime"
        android:textSize="25dp"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setTime"
        app:layout_constraintTop_toBottomOf="@id/booking_start_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <View
        app:layout_constraintTop_toBottomOf="@id/booking_start_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_end_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="25dp"
        android:paddingTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/booking_start_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endDate"
        android:textSize="25dp"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setDate"
        app:layout_constraintTop_toBottomOf="@id/booking_end_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/booking_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="endTime"
        android:textSize="25dp"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setTime"
        app:layout_constraintTop_toBottomOf="@id/booking_end_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:textColor="@color/white"
            android:id="@+id/booking_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="confirm"
            android:text="confirm"></Button>

        <Button
            android:textColor="@color/white"
            android:id="@+id/booking_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="cancel"
            android:text="cancel"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>